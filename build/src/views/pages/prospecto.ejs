        console.log("Asignando el valor formateado al campo inputPresupuesto.");
    });
    </script>


<% 
    function obtenerIconoPorExtension(nombreArchivo) {
    const extension = nombreArchivo.split('.').pop().toLowerCase();
    switch (extension) {
        case 'pdf':
            return '📄';
        case 'jpg':
        case 'jpeg':
        case 'png':
            return '🖼️';
        case 'doc':
        case 'docx':
            return '📃';
        case 'xls':
        case 'xlsx':
            return '📊';
        case 'ppt':
        case 'pptx':
            return '📽️';
        case 'mp3':
            return '🎵';
        case 'mp4':
            return '🎥';
        case 'txt':
            return '📝';
        case 'zip':
        case 'rar':
            return '📚';
        case 'html':
        case 'htm':
            return '🌐';
        case 'css':
            return '🎨';
        case 'js':
            return '🔧';
        case 'json':
            return '📋';
        case 'xml':
            return '📄';
        case 'svg':
            return '🖋️';
        case 'exe':
            return '⚙️';
        default:
            return '📂';
    }
}

